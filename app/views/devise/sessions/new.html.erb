<div class="contents row">
  <div class="container">
    <h2>Log in</h2>


    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "tarou@exam.com" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を記憶する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
